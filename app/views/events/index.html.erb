
<div class="d-flex justify-content-center align-items-center">
  <div class="card shadow-lg" style="width: 80%; max-width: 1000px;">
    <div class="card-body">
      <h1 class="card-title text-center mb-4">Upcoming Events</h1>

      <div class="list-group">
        <% @events.each do |event| %>
          <a href="<%= event_path(event) %>" class="list-group-item list-group-item-action">
            <h5 class="mb-1"><%= event.title %></h5>
            <p class="mb-1 text-muted"><%= event.description.truncate(100) %></p>
            <small><%= event.date %> | <%= event.location %></small>
          </a>
        <% end %>
      </div>

      <div class="mt-4 text-center">
        <%= link_to 'Add New Event', new_event_path, class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
</div>

