<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
  <div class="card shadow-sm" style="width: 40rem;">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Create a New Event</h3>
      
      <%= form_with(model: @event, local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :title, 'Event Title', class: 'form-label' %>
          <%= form.text_field :title, class: 'form-control', required: true %>
        </div>
        
        <div class="mb-3">
          <%= form.label :description, 'Description', class: 'form-label' %>
          <%= form.text_area :description, rows: 3, class: 'form-control' %>
        </div>
        
        <div class="row g-2 mb-3">
          <div class="col-md-6">
            <%= form.label :date, 'Date', class: 'form-label' %>
            <%= form.date_field :date, class: 'form-control', required: true %>
          </div>
          <div class="col-md-6">
            <%= form.label :time, 'Time', class: 'form-label' %>
            <%= form.time_field :time, class: 'form-control', required: true %>
          </div>
        </div>
        
        <div class="mb-3">
          <%= form.label :location, 'Location', class: 'form-label' %>
          <%= form.text_field :location, class: 'form-control', required: true %>
        </div>
        
        <div class="mb-3">
          <%= form.label :organizer, 'Organizer Name', class: 'form-label' %>
          <%= form.text_field :organizer, class: 'form-control', required: true %>
        </div>
        
        <div class="d-flex justify-content-end">
          <%= form.submit 'Create Event', class: 'btn btn-primary me-2' %>
          <%= link_to 'Back to Events', events_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
