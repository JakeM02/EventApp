<h1>Edit Event</h1>

<%= form_with(model: @event, local: true) do |form| %>
  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_field :date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :time %>
    <%= form.time_field :time, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :location %>
    <%= form.text_field :location, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :organizer %>
    <%= form.text_field :organizer, class: 'form-control' %>
  </div>

  <%= form.submit 'Update Event', class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Back to Event', event_path(@event), class: 'btn btn-secondary' %>
