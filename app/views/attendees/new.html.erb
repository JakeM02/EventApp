<!-- form for new attendees for an event -->
<div class="d-flex justify-content-center align-items-center" style="height: 80vh;">
  <div class="card shadow-sm" style="width: 40rem;">
    <div class="card-body">
      <h3 class="card-title text-center mb-4">Register for <%= @event.title %></h3>
      
      <%= form_with(model: [@event, @attendee], local: true) do |form| %>
        <div class="mb-3">
          <%= form.label :name, 'Your Name', class: 'form-label' %>
          <%= form.text_field :name, class: 'form-control', required: true %>
        </div>
        
        <div class="mb-3">
          <%= form.label :email, 'Your Email', class: 'form-label' %>
          <%= form.email_field :email, class: 'form-control', required: true %>
        </div>
        
        <div class="d-flex justify-content-end">
          <%= form.submit 'Register', class: 'btn btn-primary me-2' %>
          <%= link_to 'Back to Events', events_path, class: 'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
